<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetsGoGeoNative" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ground_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/playpansans_wght</item>
    </style>

    <style name="Theme.LetsGoGeoNative.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LetsGoGeoNative.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LetsGoGeoNative.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ElevatedButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/groundDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.CustomButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CustomButtonSmall" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.textInputFilledStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/groundLight</item>
    </style>

    <style name="Theme.radioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/groundLight</item>
    </style>
</resources>